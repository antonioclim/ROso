

@startuml categorii_syscalls
!include ../../diagrams_common/skin.puml
title System Call Categories

skinparam rectangle {
    roundCorner 10
}

rectangle "**SYSTEM CALLS**" as main #2C3E50 {
}

rectangle "**PROCESSES**" as proc #E8F5E9 {
    note as proc_note
    fork(), exec()
    exit(), wait()
    clone(), kill()
    getpid()
    end note
}

rectangle "**FILES**" as files #E3F2FD {
    note as files_note
    open(), close()
    read(), write()
    lseek(), stat()
    dup(), pipe()
    end note
}

rectangle "**MEMORY**" as mem #FFF3E0 {
    note as mem_note
    brk(), mmap()
    munmap()
    mprotect()
    mlock()
    end note
}

rectangle "**DIRECTORIES**" as dir #F3E5F5 {
    note as dir_note
    mkdir(), rmdir()
    chdir(), getcwd()
    link(), unlink()
    rename()
    end note
}

rectangle "**NETWORK**" as net #E0F7FA {
    note as net_note
    socket(), bind()
    listen(), accept()
    connect()
    send(), recv()
    end note
}

rectangle "**SIGNALS**" as sig #FCE4EC {
    note as sig_note
    signal()
    sigaction()
    sigprocmask()
    kill()
    end note
}

rectangle "**TIME**" as time #FFFDE7 {
    note as time_note
    time()
    gettimeofday()
    clock_gettime()
    nanosleep()
    end note
}

rectangle "**DEVICES**" as dev #EFEBE9 {
    note as dev_note
    ioctl()
    select(), poll()
    epoll_*()
    end note
}

main -down-> proc
main -down-> files
main -down-> mem
main -down-> dir
main -down-> net
main -down-> sig
main -down-> time
main -down-> dev

@enduml
